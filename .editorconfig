# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 80
indent_size = 4
tab_width = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,*.mk,*.go}]
indent_style = tab

[{*.nix,*.yml}]
indent_size = 2
